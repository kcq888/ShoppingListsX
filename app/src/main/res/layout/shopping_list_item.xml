<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <CheckBox
        android:id="@+id/id_checkbox"
        android:layout_width="40sp"
        android:layout_height="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/id_description"
        android:layout_width="200sp"
        android:layout_height="40sp"
        android:gravity="start|center_vertical"
        android:text="Test"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/id_checkbox"/>

    <TextView
        android:id="@+id/id_qty"
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:layout_marginStart="10sp"
        android:gravity="start|center_vertical"
        android:text="quantity"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/id_description"/>

    <TextView
        android:id="@+id/id_cost"
        android:layout_width="70sp"
        android:layout_height="40sp"
        android:gravity="start|center_vertical"
        android:layout_marginStart="10sp"
        android:text="cost"
        android:textStyle="normal"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/id_qty" />
</androidx.constraintlayout.widget.ConstraintLayout>